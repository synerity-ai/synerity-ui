{
  "name": "@synerity/ui",
  "version": "2.6.0",
  "description": "Synerity UI Component Library - Enterprise-grade Angular components",
  "homepage": "https://synerity-ai.github.io/synerity-ui/",
  "repository": {
    "type": "git",
    "url": "https://github.com/synerity-ai/synerity-ui.git"
  },
  "bugs": {
    "url": "https://github.com/synerity-ai/synerity-ui/issues"
  },
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:demo": "ng serve demo-app",
    "start:rapid": "ng serve rapid --port 4201",
    "build": "ng build",
    "build:lib": "npm run compile:scss && ng build ui-lib && node scripts/fix-exports.js",
    "build:demo": "ng build demo-app --configuration production",
    "build:rapid": "ng build rapid --configuration production",
    "build:demo:gh-pages": "ng build demo-app --configuration production --base-href /synerity-ui/",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "compile:scss": "node scripts/compile-scss-to-css.js",
    "fix:exports": "node scripts/fix-exports.js",
    "publish:lib": "cd dist/ui-lib && npm publish",
    "prepublishOnly": "npm run build:lib"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@synerity/ui": "^2.0.66",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.1",
    "@angular/cli": "^20.3.1",
    "@angular/compiler-cli": "^20.3.0",
    "@types/jasmine": "~5.1.0",
    "autoprefixer": "^10.4.21",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.3.0",
    "postcss": "^8.5.6",
    "sass": "^1.93.2",
    "tailwindcss": "^3.4.18",
    "typescript": "~5.9.2"
  }
}

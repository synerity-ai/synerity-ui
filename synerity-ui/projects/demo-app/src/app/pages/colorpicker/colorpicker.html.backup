<div class="max-w-6xl mx-auto">
  <!-- Page Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">ColorPicker</h1>
    <p class="text-lg text-gray-600">A color picker component for selecting colors with various input formats and presets.</p>
  </div>

  <!-- Tabs -->
  <app-tabs 
    [tabs]="[
      { id: 'demo', label: 'Demo', icon: 'ðŸŽ¯' },
      { id: 'usage', label: 'How to Use', icon: 'ðŸ“–' },
      { id: 'docs', label: 'Documentation', icon: 'ðŸ“š' }
    ]"
    [activeTab]="activeTab"
    (tabChange)="onTabChange($event)">
    
    <!-- Demo Tab -->
    <div *ngIf="activeTab === 'demo'">
      <div class="space-y-8">
        
        <!-- Basic ColorPicker -->
        <div class="bg-white p-6 rounded-lg border border-gray-200">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Basic ColorPicker</h3>
          <div class="flex items-center space-x-4">
            <input 
              type="color" 
              [(ngModel)]="basicColor"
              (change)="onColorChange(basicColor)"
              class="w-16 h-10 rounded border border-gray-300 cursor-pointer">
            <div class="flex items-center space-x-2">
              <span class="text-sm text-gray-600">Selected Color:</span>
              <span class="font-mono text-sm bg-gray-100 px-2 py-1 rounded">{{ basicColor }}</span>
            </div>
          </div>
        </div>

        <!-- Preset Colors -->
        <div class="bg-white p-6 rounded-lg border border-gray-200">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Preset Colors</h3>
          <div class="flex items-center space-x-4">
            <div class="flex space-x-2">
              <div 
                *ngFor="let color of presetColors"
                (click)="onPresetColorChange(color)"
                [class]="'w-8 h-8 rounded cursor-pointer border-2 ' + (selectedPresetColor === color ? 'border-gray-800' : 'border-gray-300')"
                [style.background-color]="color">
              </div>
            </div>
            <div class="flex items-center space-x-2">
              <span class="text-sm text-gray-600">Selected:</span>
              <span class="font-mono text-sm bg-gray-100 px-2 py-1 rounded">{{ selectedPresetColor }}</span>
            </div>
          </div>
        </div>

        <!-- Hex Input -->
        <div class="bg-white p-6 rounded-lg border border-gray-200">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Hex Color Input</h3>
          <div class="flex items-center space-x-4">
            <input 
              type="text" 
              [(ngModel)]="hexColor"
              (input)="onHexColorChange(hexColor)"
              placeholder="#000000"
              class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            <div 
              class="w-12 h-8 rounded border border-gray-300"
              [style.background-color]="hexColor">
            </div>
            <span class="text-sm text-gray-600">Hex: {{ hexColor }}</span>
          </div>
        </div>

        <!-- RGB Input -->
        <div class="bg-white p-6 rounded-lg border border-gray-200">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">RGB Color Input</h3>
          <div class="flex items-center space-x-4">
            <div class="flex space-x-2">
              <input 
                type="number" 
                [(ngModel)]="rgbColor.r"
                (input)="onRgbColorChange(rgbColor)"
                min="0" 
                max="255"
                class="w-16 px-2 py-1 border border-gray-300 rounded text-center">
              <input 
                type="number" 
                [(ngModel)]="rgbColor.g"
                (input)="onRgbColorChange(rgbColor)"
                min="0" 
                max="255"
                class="w-16 px-2 py-1 border border-gray-300 rounded text-center">
              <input 
                type="number" 
                [(ngModel)]="rgbColor.b"
                (input)="onRgbColorChange(rgbColor)"
                min="0" 
                max="255"
                class="w-16 px-2 py-1 border border-gray-300 rounded text-center">
            </div>
            <div 
              class="w-12 h-8 rounded border border-gray-300"
              [style.background-color]="'rgb(' + rgbColor.r + ',' + rgbColor.g + ',' + rgbColor.b + ')'">
            </div>
            <span class="text-sm text-gray-600">RGB: {{ rgbColor.r }}, {{ rgbColor.g }}, {{ rgbColor.b }}</span>
          </div>
        </div>

        <!-- HSL Input -->
        <div class="bg-white p-6 rounded-lg border border-gray-200">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">HSL Color Input</h3>
          <div class="flex items-center space-x-4">
            <div class="flex space-x-2">
              <input 
                type="number" 
                [(ngModel)]="hslColor.h"
                (input)="onHslColorChange(hslColor)"
                min="0" 
                max="360"
                class="w-16 px-2 py-1 border border-gray-300 rounded text-center">
              <input 
                type="number" 
                [(ngModel)]="hslColor.s"
                (input)="onHslColorChange(hslColor)"
                min="0" 
                max="100"
                class="w-16 px-2 py-1 border border-gray-300 rounded text-center">
              <input 
                type="number" 
                [(ngModel)]="hslColor.l"
                (input)="onHslColorChange(hslColor)"
                min="0" 
                max="100"
                class="w-16 px-2 py-1 border border-gray-300 rounded text-center">
            </div>
            <div 
              class="w-12 h-8 rounded border border-gray-300"
              [style.background-color]="'hsl(' + hslColor.h + ',' + hslColor.s + '%,' + hslColor.l + '%)'">
            </div>
            <span class="text-sm text-gray-600">HSL: {{ hslColor.h }}Â°, {{ hslColor.s }}%, {{ hslColor.l }}%</span>
          </div>
        </div>

        <!-- Advanced Features -->
        <div class="bg-white p-6 rounded-lg border border-gray-200">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Advanced Features</h3>
          <div class="space-y-4">
            
            <!-- Gradient Color -->
            <div class="flex items-center space-x-4">
              <span class="text-sm text-gray-600 w-24">Gradient:</span>
              <input 
                type="color" 
                [(ngModel)]="gradientColor"
                (change)="onGradientColorChange(gradientColor)"
                class="w-16 h-10 rounded border border-gray-300 cursor-pointer">
              <div 
                class="w-32 h-8 rounded border border-gray-300"
                [style.background]="'linear-gradient(90deg, ' + gradientColor + ', transparent)'">
              </div>
            </div>

            <!-- Alpha Channel -->
            <div class="flex items-center space-x-4">
              <span class="text-sm text-gray-600 w-24">Alpha:</span>
              <input 
                type="color" 
                [(ngModel)]="alphaColor"
                (change)="onAlphaColorChange(alphaColor)"
                class="w-16 h-10 rounded border border-gray-300 cursor-pointer">
              <div 
                class="w-32 h-8 rounded border border-gray-300"
                [style.background-color]="alphaColor">
              </div>
            </div>

            <!-- Disabled State -->
            <div class="flex items-center space-x-4">
              <span class="text-sm text-gray-600 w-24">Disabled:</span>
              <input 
                type="color" 
                [value]="disabledColor"
                disabled
                class="w-16 h-10 rounded border border-gray-300 cursor-not-allowed opacity-50">
              <div 
                class="w-12 h-8 rounded border border-gray-300"
                [style.background-color]="disabledColor">
              </div>
            </div>
          </div>
        </div>

        <!-- Color Palette -->
        <div class="bg-white p-6 rounded-lg border border-gray-200">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Color Palette</h3>
          <div class="grid grid-cols-8 gap-2">
            <div 
              *ngFor="let color of ['#FF6B6B', '#4ECDC4', '#45B7D1', '#96CEB4', '#FFEAA7', '#DDA0DD', '#98D8C8', '#F7DC6F', '#BB8FCE', '#85C1E9', '#F8C471', '#82E0AA', '#F1948A', '#85C1E9', '#D7BDE2', '#A9DFBF']"
              class="w-12 h-12 rounded cursor-pointer border border-gray-300 hover:border-gray-500 transition-colors"
              [style.background-color]="color"
              [title]="color">
            </div>
          </div>
        </div>

      </div>
    </div>

    <!-- How to Use Tab -->
    <div *ngIf="activeTab === 'usage'">
      <div class="space-y-6">
        
        <!-- Basic Usage -->
        <div class="bg-white p-6 rounded-lg border border-gray-200">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Basic Usage</h3>
          <p class="text-gray-600 mb-4">The ColorPicker component provides various ways to select colors:</p>
          
          <div class="space-y-4">
            <div>
              <h4 class="font-medium text-gray-900 mb-2">1. HTML5 Color Input</h4>
              <pre class="bg-gray-100 p-4 rounded-lg text-sm overflow-x-auto"><code>&lt;input type="color" [(ngModel)]="selectedColor"&gt;</code></pre>
            </div>
            
            <div>
              <h4 class="font-medium text-gray-900 mb-2">2. Hex Color Input</h4>
              <pre class="bg-gray-100 p-4 rounded-lg text-sm overflow-x-auto"><code>&lt;input type="text" [(ngModel)]="hexColor" placeholder="#000000"&gt;</code></pre>
            </div>
            
            <div>
              <h4 class="font-medium text-gray-900 mb-2">3. RGB Color Input</h4>
              <pre class="bg-gray-100 p-4 rounded-lg text-sm overflow-x-auto"><code>&lt;input type="number" [(ngModel)]="rgbColor.r" min="0" max="255"&gt;
&lt;input type="number" [(ngModel)]="rgbColor.g" min="0" max="255"&gt;
&lt;input type="number" [(ngModel)]="rgbColor.b" min="0" max="255"&gt;</code></pre>
            </div>
          </div>
        </div>

        <!-- Component Integration -->
        <div class="bg-white p-6 rounded-lg border border-gray-200">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Component Integration</h3>
          <p class="text-gray-600 mb-4">To use ColorPicker in your Angular component:</p>
          
          <div class="space-y-4">
            <div>
              <h4 class="font-medium text-gray-900 mb-2">1. Import FormsModule</h4>
              <pre class="bg-gray-100 p-4 rounded-lg text-sm overflow-x-auto"><code>import {{ '{' }} FormsModule {{ '}' }} from '@angular/forms';

@Component({{ '{' }}
  imports: [FormsModule],
  // ...
{{ '}' }})</code></pre>
            </div>
            
            <div>
              <h4 class="font-medium text-gray-900 mb-2">2. Define Color Properties</h4>
              <pre class="bg-gray-100 p-4 rounded-lg text-sm overflow-x-auto"><code>export class MyComponent {{ '{' }}
  selectedColor = '#3B82F6';
  hexColor = '#3B82F6';
  rgbColor = {{ '{' }} r: 59, g: 130, b: 246 {{ '}' }};
{{ '}' }}</code></pre>
            </div>
            
            <div>
              <h4 class="font-medium text-gray-900 mb-2">3. Handle Color Changes</h4>
              <pre class="bg-gray-100 p-4 rounded-lg text-sm overflow-x-auto"><code>onColorChange(color: string) {{ '{' }}
  this.selectedColor = color;
  // Additional logic here
{{ '}' }}</code></pre>
            </div>
          </div>
        </div>

        <!-- Best Practices -->
        <div class="bg-white p-6 rounded-lg border border-gray-200">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Best Practices</h3>
          <ul class="space-y-2 text-gray-600">
            <li class="flex items-start">
              <span class="text-blue-500 mr-2">â€¢</span>
              <span>Use HTML5 color input for simple color selection</span>
            </li>
            <li class="flex items-start">
              <span class="text-blue-500 mr-2">â€¢</span>
              <span>Provide preset colors for common use cases</span>
            </li>
            <li class="flex items-start">
              <span class="text-blue-500 mr-2">â€¢</span>
              <span>Validate hex color format when using text input</span>
            </li>
            <li class="flex items-start">
              <span class="text-blue-500 mr-2">â€¢</span>
              <span>Show color preview alongside input controls</span>
            </li>
            <li class="flex items-start">
              <span class="text-blue-500 mr-2">â€¢</span>
              <span>Use consistent color formats throughout your application</span>
            </li>
            <li class="flex items-start">
              <span class="text-blue-500 mr-2">â€¢</span>
              <span>Consider accessibility with proper labels and contrast</span>
            </li>
          </ul>
        </div>

      </div>
    </div>

    <!-- Documentation Tab -->
    <div *ngIf="activeTab === 'docs'">
      <div class="space-y-6">
        
        <!-- API Reference -->
        <div class="bg-white p-6 rounded-lg border border-gray-200">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">API Reference</h3>
          
          <div class="space-y-6">
            <div>
              <h4 class="font-medium text-gray-900 mb-2">HTML5 Color Input</h4>
              <div class="overflow-x-auto">
                <table class="min-w-full border border-gray-200">
                  <thead class="bg-gray-50">
                    <tr>
                      <th class="px-4 py-2 text-left text-sm font-medium text-gray-900 border-b">Attribute</th>
                      <th class="px-4 py-2 text-left text-sm font-medium text-gray-900 border-b">Type</th>
                      <th class="px-4 py-2 text-left text-sm font-medium text-gray-900 border-b">Description</th>
                    </tr>
                  </thead>
                  <tbody class="divide-y divide-gray-200">
                    <tr>
                      <td class="px-4 py-2 text-sm text-gray-900">type</td>
                      <td class="px-4 py-2 text-sm text-gray-600">"color"</td>
                      <td class="px-4 py-2 text-sm text-gray-600">Specifies the input type as color picker</td>
                    </tr>
                    <tr>
                      <td class="px-4 py-2 text-sm text-gray-900">ngModel</td>
                      <td class="px-4 py-2 text-sm text-gray-600">string</td>
                      <td class="px-4 py-2 text-sm text-gray-600">Two-way binding for the selected color value</td>
                    </tr>
                    <tr>
                      <td class="px-4 py-2 text-sm text-gray-900">disabled</td>
                      <td class="px-4 py-2 text-sm text-gray-600">boolean</td>
                      <td class="px-4 py-2 text-sm text-gray-600">Disables the color picker</td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>

            <div>
              <h4 class="font-medium text-gray-900 mb-2">Text Input (Hex Colors)</h4>
              <div class="overflow-x-auto">
                <table class="min-w-full border border-gray-200">
                  <thead class="bg-gray-50">
                    <tr>
                      <th class="px-4 py-2 text-left text-sm font-medium text-gray-900 border-b">Attribute</th>
                      <th class="px-4 py-2 text-left text-sm font-medium text-gray-900 border-b">Type</th>
                      <th class="px-4 py-2 text-left text-sm font-medium text-gray-900 border-b">Description</th>
                    </tr>
                  </thead>
                  <tbody class="divide-y divide-gray-200">
                    <tr>
                      <td class="px-4 py-2 text-sm text-gray-900">type</td>
                      <td class="px-4 py-2 text-sm text-gray-600">"text"</td>
                      <td class="px-4 py-2 text-sm text-gray-600">Text input for hex color values</td>
                    </tr>
                    <tr>
                      <td class="px-4 py-2 text-sm text-gray-900">placeholder</td>
                      <td class="px-4 py-2 text-sm text-gray-600">string</td>
                      <td class="px-4 py-2 text-sm text-gray-600">Placeholder text (e.g., "#000000")</td>
                    </tr>
                    <tr>
                      <td class="px-4 py-2 text-sm text-gray-900">pattern</td>
                      <td class="px-4 py-2 text-sm text-gray-600">string</td>
                      <td class="px-4 py-2 text-sm text-gray-600">Regex pattern for hex color validation</td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>

            <div>
              <h4 class="font-medium text-gray-900 mb-2">Number Input (RGB Colors)</h4>
              <div class="overflow-x-auto">
                <table class="min-w-full border border-gray-200">
                  <thead class="bg-gray-50">
                    <tr>
                      <th class="px-4 py-2 text-left text-sm font-medium text-gray-900 border-b">Attribute</th>
                      <th class="px-4 py-2 text-left text-sm font-medium text-gray-900 border-b">Type</th>
                      <th class="px-4 py-2 text-left text-sm font-medium text-gray-900 border-b">Description</th>
                    </tr>
                  </thead>
                  <tbody class="divide-y divide-gray-200">
                    <tr>
                      <td class="px-4 py-2 text-sm text-gray-900">type</td>
                      <td class="px-4 py-2 text-sm text-gray-600">"number"</td>
                      <td class="px-4 py-2 text-sm text-gray-600">Number input for RGB values</td>
                    </tr>
                    <tr>
                      <td class="px-4 py-2 text-sm text-gray-900">min</td>
                      <td class="px-4 py-2 text-sm text-gray-600">number</td>
                      <td class="px-4 py-2 text-sm text-gray-600">Minimum value (0 for RGB)</td>
                    </tr>
                    <tr>
                      <td class="px-4 py-2 text-sm text-gray-600">max</td>
                      <td class="px-4 py-2 text-sm text-gray-600">number</td>
                      <td class="px-4 py-2 text-sm text-gray-600">Maximum value (255 for RGB)</td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <!-- Events -->
        <div class="bg-white p-6 rounded-lg border border-gray-200">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Events</h3>
          <div class="overflow-x-auto">
            <table class="min-w-full border border-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-4 py-2 text-left text-sm font-medium text-gray-900 border-b">Event</th>
                  <th class="px-4 py-2 text-left text-sm font-medium text-gray-900 border-b">Type</th>
                  <th class="px-4 py-2 text-left text-sm font-medium text-gray-900 border-b">Description</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <tr>
                  <td class="px-4 py-2 text-sm text-gray-900">change</td>
                  <td class="px-4 py-2 text-sm text-gray-600">Event</td>
                  <td class="px-4 py-2 text-sm text-gray-600">Fired when color value changes</td>
                </tr>
                <tr>
                  <td class="px-4 py-2 text-sm text-gray-900">input</td>
                  <td class="px-4 py-2 text-sm text-gray-600">Event</td>
                  <td class="px-4 py-2 text-sm text-gray-600">Fired on every input change</td>
                </tr>
                <tr>
                  <td class="px-4 py-2 text-sm text-gray-900">blur</td>
                  <td class="px-4 py-2 text-sm text-gray-600">Event</td>
                  <td class="px-4 py-2 text-sm text-gray-600">Fired when input loses focus</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Color Formats -->
        <div class="bg-white p-6 rounded-lg border border-gray-200">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Supported Color Formats</h3>
          <div class="space-y-4">
            <div>
              <h4 class="font-medium text-gray-900 mb-2">Hex Colors</h4>
              <p class="text-gray-600 mb-2">6-digit hexadecimal color codes:</p>
              <ul class="list-disc list-inside text-gray-600 space-y-1">
                <li><code class="bg-gray-100 px-1 rounded">#FF0000</code> - Red</li>
                <li><code class="bg-gray-100 px-1 rounded">#00FF00</code> - Green</li>
                <li><code class="bg-gray-100 px-1 rounded">#0000FF</code> - Blue</li>
                <li><code class="bg-gray-100 px-1 rounded">#FFFFFF</code> - White</li>
                <li><code class="bg-gray-100 px-1 rounded">#000000</code> - Black</li>
              </ul>
            </div>
            
            <div>
              <h4 class="font-medium text-gray-900 mb-2">RGB Colors</h4>
              <p class="text-gray-600 mb-2">Red, Green, Blue values (0-255):</p>
              <ul class="list-disc list-inside text-gray-600 space-y-1">
                <li><code class="bg-gray-100 px-1 rounded">rgb(255, 0, 0)</code> - Red</li>
                <li><code class="bg-gray-100 px-1 rounded">rgb(0, 255, 0)</code> - Green</li>
                <li><code class="bg-gray-100 px-1 rounded">rgb(0, 0, 255)</code> - Blue</li>
              </ul>
            </div>
            
            <div>
              <h4 class="font-medium text-gray-900 mb-2">HSL Colors</h4>
              <p class="text-gray-600 mb-2">Hue, Saturation, Lightness values:</p>
              <ul class="list-disc list-inside text-gray-600 space-y-1">
                <li><code class="bg-gray-100 px-1 rounded">hsl(0, 100%, 50%)</code> - Red</li>
                <li><code class="bg-gray-100 px-1 rounded">hsl(120, 100%, 50%)</code> - Green</li>
                <li><code class="bg-gray-100 px-1 rounded">hsl(240, 100%, 50%)</code> - Blue</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Examples -->
        <div class="bg-white p-6 rounded-lg border border-gray-200">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Usage Examples</h3>
          <div class="space-y-4">
            <div>
              <h4 class="font-medium text-gray-900 mb-2">Basic Color Selection</h4>
              <pre class="bg-gray-100 p-4 rounded-lg text-sm overflow-x-auto"><code>&lt;input type="color" [(ngModel)]="color" (change)="onColorChange($event)"&gt;</code></pre>
            </div>
            
            <div>
              <h4 class="font-medium text-gray-900 mb-2">Hex Color Input with Validation</h4>
              <pre class="bg-gray-100 p-4 rounded-lg text-sm overflow-x-auto"><code>&lt;input 
  type="text" 
  [(ngModel)]="hexColor" 
  pattern="^#[0-9A-Fa-f]{6}$"
  placeholder="#000000"
  (input)="validateHexColor($event)"&gt;</code></pre>
            </div>
            
            <div>
              <h4 class="font-medium text-gray-900 mb-2">RGB Color Inputs</h4>
              <pre class="bg-gray-100 p-4 rounded-lg text-sm overflow-x-auto"><code>&lt;div class="flex space-x-2"&gt;
  &lt;input type="number" [(ngModel)]="r" min="0" max="255"&gt;
  &lt;input type="number" [(ngModel)]="g" min="0" max="255"&gt;
  &lt;input type="number" [(ngModel)]="b" min="0" max="255"&gt;
&lt;/div&gt;</code></pre>
            </div>
          </div>
        </div>

      </div>
    </div>

  </app-tabs>
</div>
